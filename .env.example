# SALTO Agent Configuration - Docker Ready
# Copy this file to .env and fill in your actual values

# LLM Configuration (REQUIRED)
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=https://api.openai.com/v1

# SALTO-YOUTH Authentication (REQUIRED - Get account at salto-youth.net)
SALTO_USERNAME=your_salto_username
SALTO_PASSWORD=your_salto_password

# SALTO-YOUTH Otlas Configuration
OTLAS_BASE_URL=https://www.salto-youth.net/tools/otlas-partner-finding
USER_AGENT=SaltoAgent/1.0
REQUEST_DELAY=1.0
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false
ENABLE_CACHING=true
CACHE_TTL=3600

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8095
MCP_SERVER_RELOAD=false
MCP_AUTH_ENABLED=false

# CLI Configuration
CLI_EXPORT_FORMAT=json
CLI_MAX_RESULTS=50
CLI_INTERACTIVE_MODE=true

# Rate Limiting & Performance
CONCURRENT_REQUESTS=3
SCRAPING_DELAY=1.0
CONNECTION_POOL_SIZE=10

# Optional Advanced Settings
# PROXY_URL=http://proxy:port
# PROXY_USERNAME=username
# PROXY_PASSWORD=password
# SESSION_TIMEOUT=1800
# PERSISTENT_SESSIONS=false
# EXPORT_DIRECTORY=./exports
# AUTO_EXPORT=false